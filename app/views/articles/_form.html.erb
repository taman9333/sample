<%= render 'shared/errors', obj: @article %>
<%= form_for @article, html: {class: "form-horizontal", role: 'form'} do |f| %>
  <div class='row'>
    <div class='col-sm-12'>
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :title %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of the article', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :description %><br>
        </div>
        <div class='col-sm-8'>
          <%= f.text_area :description, class: 'form-control', placeholder: 'Body of the article', autofocus: true, rows: 12 %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      <% end %>
      <div class='form-group'>
        <div class='col-sm-2 col-sm-offset-2'>
          <%= link_to 'Return to all Articles', articles_path, class: 'btn btn-danger btn-lg' %>
        </div>
      </div>
    </div>
  </div>
  